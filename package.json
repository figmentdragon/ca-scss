{
  "name": "cjmt_scss",
  "version": "1.0.0",
  "description": "css framework",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "dependencies": {
    "@popperjs/core": "^2.10.2",
    "bootstrap": "^5.1.3",
    "css": "^3.0.0",
    "jquery": "^3.6.0"
  },
  "scripts": {
    "test": "test",
    "server": "node lib/serve.js --listen 3000",
    "start": "npm-run-all --parallel watch server",
    "build": "npm run css",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss -o assets/css/,",
    "css-lint": "stylelint scss/,",
    "css-prefix": "postcss --replace assets/css/starter.css --use autoprefixer --map,",
    "css-purge": "purgecss --keyframes --css assets/css/starter.css --content index.html \"node_modules/bootstrap/js/dist/{util,modal}.js\" --output assets/css/",
    "build:css": "npm-run-all css-compile css-prefix css-lint css-purge",
    "watch": "lib/watch.js",
    "build:assets": "node lib/build-assets.js",
    "build:pages": "node lib/build-pages",
    "build:scss": "node lib/build-scss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/figmentdragon/cjmt_framework.git"
  },
  "author": "cjmt",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/figmentdragon/cjmt_framework/issues"
  },
  "homepage": "https://github.com/figmentdragon/cjmt_framework#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "browser-sync": "^2.27.7",
    "chokidar": "^3.5.2",
    "concurrently": "^6.3.0",
    "csscomb": "^4.3.0",
    "dart-sass": "^1.25.0",
    "debug": "^2.6.9",
    "desandro-matches-selector": "^2.0.2",
    "fizzy-ui-utils": "^3.0.0",
    "foundation-sites": "^6.7.4",
    "get-size": "^2.0.3",
    "isotope-layout": "^3.0.6",
    "masonry-layout": "^4.2.2",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "outlayer": "^2.1.1",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2",
    "postcss-scss": "^2.1.1",
    "prettier": "^2.4.1",
    "purgecss": "^4.0.3",
    "sass": "^1.43.4",
        "scss": "^0.2.4",
    "serve": "^13.0.2",
    "shelljs": "^0.8.4",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-recommended-scss": "^4.3.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-config-twbs-bootstrap": "^2.2.4",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.21.0",
    "upath": "^2.0.1",
    "wordpress": "^1.4.1"
  },
  "keywords": [
    "framework",
    "scss",
    "css"
  ]
}
